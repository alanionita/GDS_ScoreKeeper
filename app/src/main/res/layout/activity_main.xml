<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/team_a_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="@dimen/spacing_small"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/scoreKeeperDarkGrey"
                android:fontFamily="sans-serif-medium"
                android:text="@string/team_a_name" />

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="@dimen/spacing_default"
                android:textSize="@dimen/text_size_extra_large"
                android:textColor="@color/scoreKeeperBlack"
                android:fontFamily="sans-serif-light"
                android:text="@string/default_score" />

            <TextView
                android:id="@+id/team_a_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="@dimen/spacing_default"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/scoreKeeperBlack"
                android:fontFamily="sans-serif-light"
                android:text="@string/default_log" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_default"
                android:layout_marginRight="@dimen/spacing_default"
                android:onClick="addGoalTeamA"
                android:text="@string/goal_button_text" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_extra_small"
                android:layout_marginLeft="@dimen/spacing_default"
                android:layout_marginRight="@dimen/spacing_default"
                android:onClick="addYellowCardTeamA"
                android:text="@string/yellowCard_button_text" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_extra_small"
                android:layout_marginLeft="@dimen/spacing_default"
                android:layout_marginRight="@dimen/spacing_default"
                android:onClick="addRedCardTeamA"
                android:text="@string/redCard_button_text" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_extra_small"
                android:layout_marginLeft="@dimen/spacing_default"
                android:layout_marginRight="@dimen/spacing_default"
                android:onClick="addCornerTeamA"
                android:text="@string/corner_button_text" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/spacing_small"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/team_b_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="@dimen/spacing_small"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/scoreKeeperDarkGrey"
                android:fontFamily="sans-serif-medium"
                android:text="@string/team_b_name" />

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="@dimen/spacing_default"
                android:textSize="@dimen/text_size_extra_large"
                android:textColor="@color/scoreKeeperBlack"
                android:fontFamily="sans-serif-light"
                android:text="@string/default_score" />

            <TextView
                android:id="@+id/team_b_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="@dimen/spacing_default"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/scoreKeeperBlack"
                android:fontFamily="sans-serif-light"
                android:text="@string/default_log" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_default"
                android:layout_marginRight="@dimen/spacing_default"
                android:onClick="addGoalTeamB"
                android:text="@string/goal_button_text" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_extra_small"
                android:layout_marginLeft="@dimen/spacing_default"
                android:layout_marginRight="@dimen/spacing_default"
                android:onClick="addYellowCardTeamB"
                android:text="@string/yellowCard_button_text" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_extra_small"
                android:layout_marginLeft="@dimen/spacing_default"
                android:layout_marginRight="@dimen/spacing_default"
                android:onClick="addRedCardTeamB"
                android:text="@string/redCard_button_text" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_extra_small"
                android:layout_marginLeft="@dimen/spacing_default"
                android:layout_marginRight="@dimen/spacing_default"
                android:onClick="addCornerTeamB"
                android:text="@string/corner_button_text" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/spacing_large"
        android:onClick="resetScore"
        android:text="@string/reset_button_text"
        />

</RelativeLayout>
